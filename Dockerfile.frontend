# Frontend Dockerfile for JARVIS-2v
FROM node:18-slim

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy frontend files
COPY index.html .
COPY server.js .
COPY jarvis-core.js .

# Expose port
EXPOSE 3001

# Start server
CMD ["node", "server.js"]
