{
  "name": "cortana-shell",
  "version": "0.1.0",
  "private": true,
  "description": "Cortana 2.0 â€“ Jarvis Shell desktop assistant.",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "npm run build && electron-builder",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "deepmerge": "^4.3.1",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "eventemitter3": "^5.0.1",
    "form-data": "^4.0.0",
    "loudness": "^0.4.1",
    "node-record-lpcm16": "^1.0.4",
    "node-schedule": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yaml": "^2.3.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/loudness": "^0.4.1",
    "@types/node": "^20.10.3",
    "@types/node-schedule": "^1.3.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^26.6.5",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "build": {
    "appId": "com.infinity.cortana",
    "productName": "Cortana 2.0",
    "files": [
      "dist/**",
      "config/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/cortana.ico"
    }
  }
}
