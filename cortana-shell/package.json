{
  "name": "cortana-shell",
  "version": "2.0.0",
  "description": "Cortana Desktop Shell - AI Assistant with voice interaction",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.cortana.shell",
    "productName": "Cortana Shell",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "config.yaml",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/cortana.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icons/cortana.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "assets/icons/cortana.png",
      "category": "Utility"
    },
    "appx": {
      "applicationId": "CortanaShell",
      "displayName": "Cortana Shell",
      "publisherDisplayName": "Cortana Team",
      "identityName": "CortanaShell",
      "publisher": "CN=Cortana",
      "backgroundColor": "#0078D7",
      "showNameOnTiles": true
    }
  },
  "keywords": [
    "cortana",
    "assistant",
    "voice",
    "ai",
    "electron",
    "jarvis"
  ],
  "author": "Cortana Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0",
    "node-schedule": "^2.1.1",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-schedule": "^2.1.5",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  }
}
