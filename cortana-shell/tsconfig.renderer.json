{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "dist/renderer",
    "target": "ES2020",
    "moduleResolution": "bundler"
  },
  "include": ["src/renderer/**/*"],
  "exclude": ["src/main", "node_modules", "dist", "release"]
}
